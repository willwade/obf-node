{
  "name": "obf-node",
  "version": "1.0.7",
  "description": "Node.js implementation of the Open Board Format (OBF) validator and converter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willwade/obf-node.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "obf-node": "bin/obf-node"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "obf",
    "aac",
    "open-board-format",
    "validator",
    "converter"
  ],
  "author": "Will Wade <willwade@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "fast-xml-parser": "^5.3.3",
    "fs-extra": "^11.3.2",
    "jszip": "^3.10.1",
    "mime-types": "^3.0.2",
    "pdfkit": "^0.17.2",
    "plist": "^3.1.0",
    "sharp": "^0.34.5",
    "tinycolor2": "^1.6.0",
    "xml2js": "^0.6.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^25.0.3",
    "@types/pdfkit": "^0.17.4",
    "@types/plist": "^3.0.5",
    "@types/tinycolor2": "^1.4.6",
    "@types/xml2js": "^0.4.14",
    "@types/yargs": "^17.0.35",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.11.2",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
